---
import Hr from "./Hr.astro";
import SocialIcons from "./SocialIcons.astro";

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer class:list={["w-full", { "mt-auto": !noMarginTop }]}>
  <Hr noPadding />
  <div
    class="flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4"
  >
    <SocialIcons centered />
    <div
      class="my-2 flex flex-col items-center whitespace-nowrap sm:flex-row"
    >
      <span class="hover:text-accent">
        CC BY 4.0 &middot; Code MIT
      </span>
    </div>
  </div>
</footer>
