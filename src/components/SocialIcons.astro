---
import { SOCIALS } from "@/utils/config";

interface Props {
  centered?: boolean;
}

const { centered = false } = Astro.props;
const activeSocials = SOCIALS.filter((s) => s.active);
---

<div class:list={["flex-wrap justify-center gap-1", { flex: centered }]}>
  {
    activeSocials.map((social) => (
      <a
        href={social.href}
        target={social.name === "Email" ? undefined : "_blank"}
        rel={social.name === "Email" ? undefined : "noopener noreferrer"}
        class="group inline-block p-2 hover:rotate-6 hover:text-accent sm:p-1"
        title={social.label}
      >
        {social.name === "GitHub" && (
          <svg
            class="inline-block size-6 scale-125 fill-transparent stroke-current stroke-2 opacity-90 sm:scale-110"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22" />
          </svg>
        )}
        {social.name === "X" && (
          <svg
            class="inline-block size-6 scale-125 fill-transparent stroke-current stroke-2 opacity-90 sm:scale-110"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path d="M4 4l11.733 16h4.267l-11.733 -16z" />
            <path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772" />
          </svg>
        )}
        {social.name === "LinkedIn" && (
          <svg
            class="inline-block size-6 scale-125 fill-transparent stroke-current stroke-2 opacity-90 sm:scale-110"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z" />
            <path d="M8 11l0 5" />
            <path d="M8 8l0 .01" />
            <path d="M12 16l0 -5" />
            <path d="M16 16v-3a2 2 0 0 0 -4 0" />
          </svg>
        )}
        {social.name === "Email" && (
          <svg
            class="inline-block size-6 scale-125 fill-transparent stroke-current stroke-2 opacity-90 sm:scale-110"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
            <path d="M3 7l9 6l9 -6" />
          </svg>
        )}
        <span class="sr-only">{social.label}</span>
      </a>
    ))
  }
</div>
